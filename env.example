# Environment variables for GeoHUB
# Copy this file to .env and update the values

# Database URL for PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/global_papua_abadi?schema=public"

# Better Auth Configuration
BETTER_AUTH_SECRET="your-secret-key-here-make-it-long-and-random"
BETTER_AUTH_URL="https://your-domain.com" # Only needed in production

# Lark (Feishu) OAuth Configuration
LARK_CLIENT_ID="your-lark-app-id"
LARK_CLIENT_SECRET="your-lark-app-secret"
LARK_REDIRECT_URI="http://localhost:3000/api/auth/callback/lark"

# ArcGIS Enterprise Configuration
ARCGIS_PORTAL_URL="https://your-arcgis-portal.com/portal"
ARCGIS_USERNAME="your-arcgis-username"
ARCGIS_PASSWORD="your-arcgis-password"
ARCGIS_REFERER="http://localhost:3000" # Optional: defaults to NEXT_PUBLIC_APP_URL

# Land Units Service - Paddock Naming Concept (REQUIRED for /api/landunit endpoints)
# This is the ArcGIS MapServer for hierarchical land unit filtering (Mill > Region > Farm > Block > Paddock)
LAND_UNITS_SERVICE_URL="https://geoportal.mnmsugarhub.com/server/rest/services/Paddock_Naming_Concept_GPA/MapServer"

# ArcGIS Map Service (Optional - fallback if LAND_UNITS_SERVICE_URL not set)
ARCGIS_MAP_SERVICE_URL="https://geoportal.mnmsugarhub.com/server/rest/services/Paddock_Naming_Concept_GPA/MapServer"